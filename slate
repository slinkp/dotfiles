# See http://thume.ca/howto/2012/11/19/using-slate/

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings

## MOVED TO HAMMERSPOON
# bind right:alt       resize +5% +0
# bind left:alt        resize -5% +0
# bind up:alt          resize +0   -5%
# bind down:alt        resize +0   +5%

# TO MOVE TO HAMMERSPOON
bind right:ctrl;alt  resize -5% +0 bottom-right
bind left:ctrl;alt   resize +5% +0 bottom-right
bind up:ctrl;alt     resize +0   +5% bottom-right
bind down:ctrl;alt   resize +0   -5% bottom-right

# Push Bindings (move to edge and maximize along that edge)
#bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
#bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
#bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
#bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Maximize vertically
bind up:ctrl;cmd      move windowTopLeftX;screenOriginY windowSizeX;screenSizeY
bind pageUp:ctrl;cmd  move windowTopLeftX;screenOriginY windowSizeX;screenSizeY

# Nudge Bindings (move window) 
# bind right:shift;alt nudge +1% +0
# bind left:shift;alt  nudge -1% +0
# bind up:shift;alt    nudge +0   -3%
# bind down:shift;alt  nudge +0   +3%

# Throw Bindings
#bind 1:ctrl;alt         throw 0 resize
#bind 2:ctrl;alt         throw 1 resize
#bind 3:ctrl;alt         throw 2 resize
#bind right:ctrl;alt;cmd throw right resize
#bind left:ctrl;alt;cmd  throw left  resize
#bind up:ctrl;alt;cmd    throw up    resize
#bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
# ... meh, some conflict with bash history
# bind right:cmd    focus right
# bind left:cmd     focus left
# bind up:cmd       focus up
# bind down:cmd     focus down
# bind up:cmd;alt   focus behind
# bind down:cmd;alt focus behind

# Window Hints (for choosing focus by letter)
bind esc:cmd hint

# Divvy-style grid

bind g:cmd;shift  grid padding:5 0:12,6 1:8,6
